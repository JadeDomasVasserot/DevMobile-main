{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idcommande</th>
                <th>Date</th>
                <th>Number</th>
                <th>Amountoutmargin</th>
                <th>Commargin</th>
                <th>Totalamount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.idcommande }}</td>
                <td>{{ commande.date ? commande.date|date('Y-m-d') : '' }}</td>
                <td>{{ commande.number }}</td>
                <td>{{ commande.amountoutmargin }}</td>
                <td>{{ commande.commargin }}</td>
                <td>{{ commande.totalamount }}</td>
                <td>
                    <a href="{{ path('commande_user_show', {'idcommande': commande.idcommande}) }}">show</a>
                    <a href="{{ path('commande_user_edit', {'idcommande': commande.idcommande}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commande_user_new') }}">Create new</a>
{% endblock %}
